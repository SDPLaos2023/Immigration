@model AccountModel;
<!DOCTYPE html>
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Immigration.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
</head>
<body>
    <section>
        <div class="row m-auto">
            <div class="col-sm-8" style="padding:0px !important;">
                <div class="loginbox-left">
                    <img class="imgleft" src="http://thaibizlaos.com/upload/iblock/4fe/4fe50acb06e6950244fcce2dd8962a46.jpg" alt="LtnUu2.png" border="0" /> <br>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="loginbox-right">
                    <center>
                        <img class="logologin" src="https://sv1.picz.in.th/images/2023/02/01/LtnUu2.png" alt="LtnUu2.png" border="0" /> <br>
                    </center>
                    <div class="formbox">
                        <form asp-controller="Account" asp-action="Login" onkeydown="return event.key != 'Enter';" method="post" enctype="multipart/form-data">
                            <h2>ເຂົ້າສູ່ລະບົບ</h2>
                            <div class="inputbox">
                                <input type="text" asp-for="UserName" required>
                                <label for="">ຊື່ຜູ້ໃຊ້</label>
                            </div>

                            <div class="inputbox">
                                <input type="password" asp-for="Password" required>
                                <label for="">ລະຫັດຜ່ານ</label>
                            </div>

                            <div class="forget">
                                <p><a asp-area="" asp-controller="" asp-action="Forgotpassword">ລືມລະຫັດຜ່ານ</a></p>
                            </div>

                    <center>
                        <button type="submit" id="buttonLogin">ເຂົ້າສູ່ລະບົບ</button>
                    </center>

                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    
</body>
</html>
