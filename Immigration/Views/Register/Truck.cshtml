<!DOCTYPE html>
@{
    ViewData["Title"] = "Passport";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
</head>
<body>
    <section>
        <h2 class="title">Truck Register</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="license" class="form-label">License Plate No</label>
                    <input type="text" class="form-control" id="license" placeholder="">
                </div>
            </div>
            <div class="col-md-3">
                <label for="type" class="form-label">Truck type</label>
                <select class="form-select" aria-label="Default select example" id="type">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="comname" class="form-label">Company name</label>
                    <input type="text" class="form-control" id="comname" placeholder="">
                </div>
            </div>
            <div class="col-md-3">
                <button>Add</button>
            </div>
        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">License Plate No</th>
                        <th scope="col">Type</th>
                        <th scope="col">Company</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>mdo</td>
                        <td>
                            <div class="actionbox">
                                <a class="btnedit"><i class="fas fa-pen-to-square"></i></a>
                                <a class="btndelete"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
    
</body>
</html>
